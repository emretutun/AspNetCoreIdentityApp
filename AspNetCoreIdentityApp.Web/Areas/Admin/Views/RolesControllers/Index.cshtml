@{
    ViewData["Title"] = "Index";
}

@model List<AdminModel.RoleViewModel>

<div class="row mb-3">
    <div class="col-md-8 offset-md-2 d-flex justify-content-between align-items-center">
        <h2>Roller</h2>
        <a class="btn btn-primary" asp-controller="RolesControllers" asp-action="RoleCreate" asp-area="admin">Rol ekle</a>
    </div>
</div>

<div class="row">

    <div class="col-md-8 offset-md-2">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Rol Adı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-dark btn-sm" asp-area="admin" asp-controller="RolesControllers" asp-action="RoleUpdate" asp-route-id="@item.Id">Rol güncelle</a>
                            <a class="btn btn-dark btn-sm my-1" asp-area="admin" asp-controller="RolesControllers" asp-action="RoleDelete" asp-route-id="@item.Id">Rol sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
